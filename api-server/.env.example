# Server Configuration
BIND_ADDRESS=0.0.0.0:3000
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://bam:bam@localhost:5433/bam_db
DATABASE_MAX_CONNECTIONS=10

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-here
TOKEN_EXPIRY=3600
REFRESH_TOKEN_EXPIRY=604800

# File Storage Configuration
FILE_STORAGE_PATH=./uploads
MAX_FILE_SIZE=52428800
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/tiff,image/bmp

# IA System Configuration (OrangePi)
IA_BASE_URL=http://192.168.1.100:8080
IA_TIMEOUT=30
IA_AUTH_TOKEN=optional-ia-system-auth-token
IA_MOCK_MODE=false  # Set to true to use mock data for development/testing

# Logging
RUST_LOG=info